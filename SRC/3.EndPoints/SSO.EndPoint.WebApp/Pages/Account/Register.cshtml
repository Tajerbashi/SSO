@page
@model SSO.EndPoint.WebApp.Pages.Account.RegisterModel
<div class="app-page d-flex justify-content-center align-items-center">
    <div class="app-page-content glass-card p-4">
        <h2 class="text-center mb-4">Create Account</h2>
        <form>
            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control glass-input" placeholder="Your name">
            </div>
            <div class="mb-3">
                <label class="form-label">Email address</label>
                <input type="email" class="form-control glass-input" placeholder="name@example.com">
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control glass-input" placeholder="••••••••">
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary glass-button">Register</button>
            </div>
        </form>
        <div class="mt-3 text-center">
            <a href="/Account/Login" class="text-light small">Already have an account? Login</a>
        </div>
    </div>
</div>

@{
}
