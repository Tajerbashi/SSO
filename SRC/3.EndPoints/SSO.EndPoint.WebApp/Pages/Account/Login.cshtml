@page
@model LoginModel

<div class="app-page d-flex justify-content-center align-items-center">
    <div class="app-page-content glass-card p-4">
        <h2 class="text-center mb-4">Sign In</h2>
        <form method="post" asp-page="/Account/Login">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control glass-input" name="Username" placeholder="Enter username" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control glass-input" name="Password" placeholder="Enter password" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary glass-button">Login</button>
            </div>
        </form>
        <div class="mt-3 text-center">
            <a href="/Account/Register" class="text-light small">Don't have an account? Register</a>
        </div>
    </div>
</div>


@{
}
