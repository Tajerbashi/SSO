  },

  "BaseUrl": "https://localhost:6200/",

  "Identity": {
    "Jwt": {
      "Key": "97206226-05F5-463A-BBE8-281D6E87",
      "Issuer": "Application",
      "Audience": "Application",
      "ExpireMinutes": 30,
      "RefreshTokenExpireDays": 7
    },
    "Jwe": {
      "Key": "9Ds06BD6-0G45-Ar3A-BBE8-281D6E79"
    },
    "IdentityServerConfig": {
      "Users": [
        {
          "Name": "Blazor Client",
          "ClientId": "blazor.client",
          "Uri": "https://localhost:1201",
          "AllowedGrantTypes": "User"
        },
        {
          "Name": "MVC.client",
          "ClientId": "mvc.client",
          "Uri": "https://localhost:1202",
          "AllowedGrantTypes": "User"
        },
        {
          "Name": "Shop.api",
          "ClientId": "shop.api",
          "Uri": "https://localhost:1203",
          "AllowedGrantTypes": "Server"
        },
        {
          "Name": "Support.api",
          "ClientId": "support.api",
          "Uri": "https://localhost:1204",
          "AllowedGrantTypes": "Server"
        },
        {
          "Name": "API Gateway",
          "ClientId": "api.gateway",
          "Uri": "https://localhost:1200",
          "AllowedGrantTypes": "Gateway"
        }
      ]
    }
  },

  "SqlCache": {
    "ConnectionString": "Server =TAJERBASHI; Database=SSO;User Id = sa;Password=12341234; MultipleActiveResultSets=true; Encrypt = false",
    "SchemaName": "Cache",
    "TableName": "CacheData",
    "AutoCreateTable": true
  },

  "Swagger": {
    "Title": "SSO => Stands for Single Sign-On Web Api",
    "SecurityTitle": "Bearer",
    "Version": "v1",
    "Description": "Please enter a valid token ~ token",
    "Name": "Authorization",
    "BearerFormat": "JWT",
    "Scheme": "Bearer"
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.MSSqlServer"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server =TAJERBASHI; Database=SSO;User Id = sa;Password=12341234; MultipleActiveResultSets=true; Encrypt = false",
          "tableName": "Logs",
          "schemaName": "Log",
          "autoCreateSqlTable": true,
          "restrictedToMinimumLevel": "Information",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "additionalColumns": [
              {
                "ColumnName": "Controller",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnName": "Action",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnName": "RequestBody",
                "DataType": "nvarchar",
                "DataLength": -1
              }
            ]
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "SSO"
    }
  }


}
