@page
@model LoginModel

@{
    ViewData["Title"] = "Welcome Back";
}

<div class="sso-login-container">
    <div class="sso-login-card">
        <div class="sso-login-header">
            <h1><i class="fas fa-sign-in-alt"></i> @ViewData["Title"]</h1>
            <p class="text-muted">Sign in to access your account</p>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="sso-providers">
                <h3>Quick Sign In</h3>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="provider-buttons">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="provider-btn" name="provider" value="@provider.Name"
                                    title="Log in using your @provider.DisplayName account">
                                Continue with @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
                <div class="divider">
                    <span>OR</span>
                </div>
            </div>
        }

        <form id="account" method="post" class="sso-login-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                       aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                       aria-required="true" placeholder="password" id="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <button type="button" class="password-toggle" onclick="togglePassword()">
                    <i class="fas fa-eye"></i>
                </button>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mb-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        Remember me
                    </label>
                </div>
                <div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary">Forgot password?</a>
                </div>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
            </button>

            <div class="text-center mt-4">
                <p class="text-muted">
                    Don't have an account?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Create one</a>
                </p>
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="alert alert-info mt-3">
                        <i class="fas fa-info-circle me-2"></i>
                        No external authentication providers are currently configured.
                    </div>
                }
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}